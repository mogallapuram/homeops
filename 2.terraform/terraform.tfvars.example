# Proxmox API Configuration
pm_api_url   = "https://PROXMOX_IP:8006/api2/json"
pm_api_token = "terraform@pve!tf=YOUR-TOKEN-HERE"

# Proxmox Storage
pm_datastore = "local-lvm"
template_name = "ubuntu-cloud-24.04"  # Same template name on both nodes (e.g., ubuntu-cloud-24.04)
bridge       = "vmbr0"

# VM Disk Configuration
root_disk_gb = 30

# Cloud-init Configuration
ci_user             = "ram"
ssh_public_key_path = "keys/public-key.pub"

# K3s Cluster Network Configuration
# 3 Master nodes + 2 Worker nodes
# Adjust IPs according to your network
node_ipv4 = {
  k3s-master-01 = "10.10.11.1/23"
  k3s-master-02 = "10.10.11.2/23"
  k3s-master-03 = "10.10.11.3/23"
  k3s-worker-01 = "10.10.11.11/23"
  k3s-worker-02 = "10.10.11.12/23"
}

ipv4_gateway = "10.10.10.1"

# Optional: Consul ACL token (if Consul ACL is enabled)
# consul_token = "your-consul-acl-token-here"
